{
  "name": "kiots-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": " next dev",
    "start": "next start",
    "lint": "next lint",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "next build && yarn prebuild-electron && electron-builder",
    "prebuild-electron": "tsc -p electron/tsconfig.json"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "KioskApp.v1",
    "productName": "KioskApp",
    "files": [
      "out/**/*",
      "electron/**/*.js",
      "public/**/*"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "public/image/app-icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "asar": true,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "KioskApp"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/icons-material": "^6.1.7",
    "@mui/material": "^6.1.7",
    "@radix-ui/react-slot": "^1.1.0",
    "auto-launch": "^5.0.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "electron-serve": "1.2.0",
    "face-api.js": "^0.22.2",
    "lucide-react": "^0.460.0",
    "mui": "^0.0.1",
    "next": "15.0.3",
    "path-is-absolute": "^2.0.0",
    "qrcode.react": "^4.1.0",
    "react": "19.0.0-rc-66855b96-20241106",
    "react-dom": "19.0.0-rc-66855b96-20241106",
    "react-router-dom": "^7.0.2",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.5",
    "@types/electron": "^1.6.12",
    "@types/node": "^22.9.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "electron": "^33.2.0",
    "electron-builder": "^24.3.0",
    "eslint": "^9.15.0",
    "eslint-config-next": "15.0.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.15",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  }
}